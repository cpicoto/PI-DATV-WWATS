# ===== WWATS PI-DATV CONFIG =====
# RTMP base and user identity
RTMP_BASE=rtmp://streaming.wwats.net/live
RTMP_CALLSIGN=AD7NP
RTMP_TOKEN=REPLACE_WITH_YOUR_JWT

# Video (UVC camera)
VIDEO_DEV=/dev/video0
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30

# If your UVC camera needs a specific input format, set one:
#   mjpeg  | yuyv422  | (leave blank to let ffmpeg decide)
VIDEO_INPUT_FORMAT=mjpeg

# Audio (ALSA)
AUDIO_DEV=default
AUDIO_RATE=48000

# GPIO (button + optional LED)
BUTTON_GPIO=17
LED_GPIO=27

# Encoding (H.264 ON THE PI â€” not in the camera)
#   h264_v4l2m2m  -> Raspberry Pi hardware encoder (Pi 4/5)
#   libx264       -> Software encoder on CPU
ENCODER=h264_v4l2m2m

BITRATE=4000k
GOP_SECONDS=2
PROFILE=high
VF_FILTER=

# Tee a local preview so HDMI can show your feed without double-encode
ENABLE_TEE_PREVIEW=1
PREVIEW_UDP_URL=udp://127.0.0.1:23000?pkt_size=1316

# Split-screen remote monitor (right side of HDMI)
REMOTE_URL=https://stream.wwats.net/
SCREEN_W=1920
SCREEN_H=1080
OVERLAY_FONT=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf

# Web UI (Option B)
ENABLE_UI=1
UI_PORT=8080

# Reconnect strategy
RECONNECT_WAIT=2
MAX_RECONNECT=0   # 0 = infinite
